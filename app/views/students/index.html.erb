<div class="row">
  <div class="col s12">
    <h3 class="center-align">Students List</h3>
  </div>
</div>

<div class="row">
  <% @students.each do |stu| %>
    <div class="col s6 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Name: <%= stu.name %></span>
          <p>Email: <%= stu.email %></p>
          <p> Course Details </p>
        </div>
        <div class="card-action">
          <%= link_to "View Profile", student_path(stu) %>
        </div>
      </div>
    </div>
  <% end%>  
</div>
