<div class="row sign-up-form">
  <div class="col s6 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Name: <%= @student.name %></span>
        <p>Email: <%= @student.email %></p>
        <p> Course Details </p>
      </div>
      <div class="card-action">
        <h6>Current Enrollements</h6>
      </div>
    </div>
    <% if current_student == @student %>
      <%= link_to '<i class="material-icons right">create</i>Edit Profile'.html_safe, edit_student_path(@student), class: "waves-effect waves-light btn" %>
    <% end %>
  </div>
</div>