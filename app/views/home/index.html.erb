<div class="row">
  <div class="col s12">
    <h3 class="center-align">Course List</h3>
  </div>
</div>

<div class="row">
  <% @courses.each do |c| %>
    <div class="col s6 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= c.short_name %> : <%= c.name %></span>
          <p><%= c.description %></p>
        </div>
        <div class="card-action">
          <a href="#">Enroll</a>
          <a href="#">Info</a>
        </div>
      </div>
    </div>
  <% end%>  
</div>

